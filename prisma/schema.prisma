generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum GoalStatus {
    COMPLETED
    IN_REVIEW
    NOT_COMPLETED
    NEW
}

model Goal {
    id             String     @id @default(auto()) @map("_id") @db.ObjectId
    title          String
    description    String
    status         GoalStatus
    createdAt      DateTime   @default(now())
    completeBefore DateTime
}
